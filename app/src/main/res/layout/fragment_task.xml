<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_task"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.tasks.TaskFragment"
    android:background="@color/BFDColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/highTitleFragmentsLayout"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaa_bold"
                android:padding="@dimen/paddingTitleFragments"
                android:paddingStart="@dimen/marginLeftTitleFragments"
                android:text="@string/itemTASK"
                android:textSize="@dimen/sizeTitleFragments"
                tools:ignore="RtlSymmetry" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="bottom|end"
                android:paddingEnd="20dp"
                tools:ignore="RtlSymmetry">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupTaskPriorities"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/highChipTitleFragment">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipPriorityTaskLow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:text=""
                        android:textAlignment="viewEnd"
                        android:textSize="@dimen/sizeTextChipTitleFragment"
                        app:chipBackgroundColor="#A80BB905" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipPriorityTaskMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:text=""
                        android:textAlignment="viewEnd"
                        android:textSize="@dimen/sizeTextChipTitleFragment"
                        app:chipBackgroundColor="#A8EBC903"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipPriorityTaskHigh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:text=""
                        android:textAlignment="viewEnd"
                        android:textSize="@dimen/sizeTextChipTitleFragment"
                        app:chipBackgroundColor="#A9FF0000"/>

                </com.google.android.material.chip.ChipGroup>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llToolsTasks"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:gravity="end|center"
            android:paddingHorizontal="20dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipClearAllTasks"
                android:layout_width="@dimen/wightChipClearFragmentNote"
                android:layout_height="wrap_content"
                app:chipBackgroundColor="@color/SecondColorDark"
                app:chipIcon="@drawable/ic_clear"
                app:iconStartPadding="@dimen/paddingStartIconChipNote"
                app:chipIconSize="20dp"/>

            <androidx.appcompat.widget.SearchView
                android:id="@+id/svSearchTask"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@drawable/shape_background_primary"
                app:searchIcon="@drawable/ic_search"
                android:layout_marginHorizontal="15dp"
                />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipMoreOptionsTask"
                android:layout_width="@dimen/wightChipClearFragmentNote"
                android:layout_height="wrap_content"
                app:chipBackgroundColor="@color/SecondColorDark"
                android:text="···"
                android:textSize="20sp"
                android:textAlignment="center"
                app:iconStartPadding="@dimen/paddingStartIconChipNote"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvPreviewNothingTaskFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/txtNothingTaskFragment"
                android:fontFamily="@font/comfortaa_bold"
                android:textSize="@dimen/sizeTextNothingNotesFragment"
                android:alpha="0.7"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvTaskList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp" />

                </LinearLayout>

            </ScrollView>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabNewTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="20dp"
                android:focusable="true"
                android:clickable="true"
                app:backgroundTint="@color/BlueMaterial"
                app:srcCompat="@drawable/ic_new_task"
                app:tint="@color/WhiteColor"
                tools:ignore="ContentDescription" />

        </RelativeLayout>

    </LinearLayout>

</FrameLayout>