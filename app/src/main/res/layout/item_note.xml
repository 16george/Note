<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvNote"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:minHeight="100dp"
    android:maxHeight="300dp"
    android:layout_marginBottom="16dp"
    android:layout_gravity="center"
    app:cardCornerRadius="22dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/SecondColorDark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="2dp"
            tools:ignore="UseCompoundDrawables">

            <TextView
                android:id="@+id/tvTitleNote"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="4"
                android:text="Title"
                android:gravity="center"
                android:textSize="19sp"
                android:fontFamily="@font/comfortaa_bold"
                android:lines="1"
                android:ellipsize="end"
                tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/ivIconFavoriteNote"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:maxWidth="25dp"
                android:layout_gravity="center"
                android:alpha="0.8"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvDateNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="7dp"
            android:layout_margin="1dp"
            android:textSize="14sp"
            android:fontFamily="@font/comfortaa_medium"
            android:text="16/03/2003"
            tools:ignore="HardcodedText,RtlSymmetry" />

        <TextView
            android:id="@+id/tvDescriptionNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="100dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginBottom="6dp"
            android:text="Description"
            android:textSize="16sp"
            android:alpha="0.8"
            android:fontFamily="@font/comfortaa_light"
            android:ellipsize="end"
            tools:ignore="HardcodedText" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            app:cardCornerRadius="22dp"
            app:cardBackgroundColor="@color/SecondColor">

            <ImageView
                android:id="@+id/ivImageNote"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:ignore="ContentDescription" />
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>