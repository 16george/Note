<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartApp">

  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="458dp"
      android:layout_height="432dp"
      android:layout_marginEnd="80dp"
      android:layout_marginBottom="408dp"
      android:contentDescription="TODO"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:srcCompat="@drawable/elipse_4" />

  <TextView
      android:id="@+id/txt_bienvenida"
      android:layout_width="252dp"
      android:layout_height="63dp"
      android:text="¡Bienvenido!"
      android:textSize="40sp"
      android:gravity="center"
      app:layout_constraintBottom_toBottomOf="@+id/imageView2"
      app:layout_constraintEnd_toEndOf="@+id/imageView2"
      app:layout_constraintHorizontal_bias="0.412"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.463" />

  <TextView
      android:id="@+id/textView3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="@font/montserrat"
      android:text="¿Cuál es tu nombre?"
      android:textSize="26sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.497"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.541" />

  <EditText
      android:id="@+id/etxt_name"
      android:layout_width="271dp"
      android:layout_height="49dp"
      android:background="@drawable/name_input"
      android:ems="10"
      android:inputType="textPersonName"
      android:gravity="center"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.497"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView3"
      app:layout_constraintVertical_bias="0.091" />

  <ImageButton
      android:id="@+id/ibtn_next"
      android:layout_width="169dp"
      android:layout_height="58dp"
      android:background="@drawable/button_next"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/etxt_name"
      app:layout_constraintVertical_bias="0.376" />

  <TextView
      android:id="@+id/txt_next"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="@font/montserrat"
      android:text="Continuar"
      android:textColor="@color/white"
      android:textSize="16sp"
      app:layout_constraintBottom_toBottomOf="@+id/ibtn_next"
      app:layout_constraintEnd_toEndOf="@+id/ibtn_next"
      app:layout_constraintStart_toStartOf="@+id/ibtn_next"
      app:layout_constraintTop_toTopOf="@+id/ibtn_next" />
</androidx.constraintlayout.widget.ConstraintLayout>