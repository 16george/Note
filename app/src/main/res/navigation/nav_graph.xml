<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/itemHomeFragment">

    <fragment
        android:id="@+id/itemHomeFragment"
        android:name="com.nmrc.note.ui.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_taskFragment"
            app:destination="@id/itemTaskFragment" />
    </fragment>
    <fragment
        android:id="@+id/itemTaskFragment"
        android:name="com.nmrc.note.ui.fragments.TaskFragment"
        android:label="fragment_task"
        tools:layout="@layout/fragment_task" >
        <action
            android:id="@+id/action_taskFragment_to_noteFragment"
            app:destination="@id/itemNoteFragment" />
    </fragment>
    <fragment
        android:id="@+id/itemNoteFragment"
        android:name="com.nmrc.note.ui.fragments.NoteFragment"
        android:label="fragment_note"
        tools:layout="@layout/fragment_note" />
</navigation>