<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Note" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/WhiteColor</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/SecondColorDark</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#999999</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>

        <item name="android:windowBackground">@color/WhiteColor</item>

        <item name="materialCardViewStyle">@style/ItemsBase</item>

        <item name="android:itemBackground">@color/WhiteMaterial_75</item>

    </style>

    <style name="ChipMaterial" parent="Theme.MaterialComponents.DayNight">

        <item name="colorPrimary">@color/SecondColorDark</item>

    </style>

    <style name="ItemsBase" parent="CardView.Light">
        <item name="android:textColor">@color/SecondColorDark</item>
        <item name="cardBackgroundColor">@color/WhiteMaterial_75</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="BottomNavViewActive">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="BottomNavView" parent="Theme.MaterialComponents">
        <item name="bottomNavigationStyle">@style/Widget.MaterialComponents.BottomNavigationView.Colored</item>
        <item name="colorPrimary">@color/WhiteMaterial</item>
        <item name="colorOnPrimary">@color/SecondColorDark</item>
        <item name="itemIconTint">@null</item>
    </style>

</resources>